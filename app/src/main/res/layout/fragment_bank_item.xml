<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/llDateContainer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    android:padding="14dp">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        style="@style/AccentTitleTextTheme"/>

    <TextView
        android:id="@+id/tvBic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/BaseTextTheme"/>

    <TextView
        android:id="@+id/tvKS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/BaseTextTheme"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bank_info_fragment__telephone_title"
        style="@style/AccentTextTheme"/>

    <TextView
        android:id="@+id/tvTelephone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/BaseTextTheme"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bank_info_fragment__address_title"
        style="@style/AccentTextTheme"/>

    <TextView
        android:id="@+id/tvCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/BaseTextTheme"/>

    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/BaseTextTheme"/>

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        style="@style/BaseTextTheme"/>
</LinearLayout>